{
    "agent":"sac",
    "env_name" : "HalfCheetah-v2",
    "env":{
        "reward_scale":5,
        "obs_norm":false,
        "obs_alpha":0.001
    },
    "replay_buffer":{
        "size": 1e6
    },
    "net":{ 
        "hidden_shapes": [400,300],
        "append_hidden_shapes":[]        
    },
    "general_setting": {
        "discount" : 0.99,
        "pretrain_frames" : 10000,
        "num_epochs" : 1500,
        "epoch_frames" : 1000,
        "max_episode_frames" : 1000,

        "batch_size" : 128,
        "min_pool" : 10000,

        "target_hard_update_period" : 1000,
        "use_soft_update" : true,
        "tau" : 0.005,
        "opt_times" : 1000,

        "eval_episodes" : 1
    },
    "sac":{
        
        "plr" : 3e-4,
        "vlr" : 3e-4,
        "qlr" : 3e-4,
        
        "reparameterization": true,
        "automatic_entropy_tuning": false
    }
}
